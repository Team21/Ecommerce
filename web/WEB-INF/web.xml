<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/indexHome.jsp </welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>DisplayProducts</servlet-name>
        <servlet-class>controller.DisplayProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Category</servlet-name>
        <servlet-class>controller.category.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>controller.product.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayProducts</servlet-name>
        <url-pattern>/DisplayProducts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestReciever</servlet-name>
        <servlet-class>controller.RequestReciever</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestReciever</servlet-name>
        <url-pattern>/RequestReciever</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>controller.AdminLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/adm/adminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Category</servlet-name>
        <url-pattern>/adm/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/adm/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/adm/user</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            100
        </session-timeout>
    </session-config>
</web-app>
